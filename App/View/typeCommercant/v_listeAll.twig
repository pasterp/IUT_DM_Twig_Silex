{% extends "v_base.twig" %}

{% block contenu %}
    <div class="row">
        <a href="{{ path }}index.php/typeCommercant/CreerType/">Ajouter un type</a>
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <td>#</td>
                <td>Type</td>
                <td>Actions</td>
            </tr>
            </thead>
            <tbody>
            {% for type in typesCommercants if typesCommercants is not empty %}
                <tr>
                    <td>{{ type.id_type}}</td>
                    <td>{{ type.noms }}</td>
                    <td>
                        <a href="{{ path }}index.php/typeCommercant/editerTypeCommercant/{{ type.id_type }}"><span class="glyphicon glyphicon-cog"></span> Modifier</a>
                        <a href="{{ path }}index.php/typeCommercant/supprimerTypeCommercant/{{ type.id_type }}"><span class="glyphicon glyphicon-trash"></span> Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}